doctype html
html
  head
    title= topic[0]['title']
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css", integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z", crossorigin="anonymous")
    link(rel="stylesheet", href="/css/css.css", crossorigin="anonymous")
  body
    h1 글보기
    table.table-bordered
      tbody
        tr
          th(scope="row") Name
          td= topic[0]['author']
        tr
          th(scope="row") Date
          td= topic[0]['date_formatted']
        tr
          th(scope="row") Title
          td= topic[0]['title']
        tr
          th(scope="row") Content
          td= topic[0]['content']
    if loggedin
      button.btn.btn-outline-primary(onclick="location.href='../../modifytopic/" + topic[0]['id'] + "'") modify
      button.btn.btn-outline-danger(onclick="location.href='../../deletetopic/" + topic[0]['id'] + "'") delete
    button.btn.btn-outline-secondary(type="button", onclick="location.href='../'") return to list

  script(src="https://code.jquery.com/jquery-3.5.1.min.js", integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=", crossorigin="anonymous")
  script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js", integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV", crossorigin="anonymous")
