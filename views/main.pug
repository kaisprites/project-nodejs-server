doctype html
html
  head
    title node.js 게시판
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css", integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z", crossorigin="anonymous")
    link(rel="stylesheet", href="/css/css.css", crossorigin="anonymous")
  body
    h1 node.js 게시판
    table.table
      thead.thead-light
        tr
          th(scope="col") #
          th(scope="col") Title
          th(scope="col") Author
          th(scope="col") Date
      tbody
        -for(i=0; i<topic.length; i++)
          tr
            td= topic[i]['rownum']
            td
              a(href='/topic/'+topic[i]['id'])= topic[i]['title']
            td= topic[i]['author']
            td= topic[i]['date_formatted']
    if loggedin
      button.btn.btn-outline-primary(onclick="location.href='/newtopic'") new topic
      button.btn.btn-outline-secondary(onclick="location.href='/logout'") logout
    else
      button.btn.btn-outline-secondary(onclick="location.href='/login'") login
  div= user + '님 환영합니다'
  script(src="https://code.jquery.com/jquery-3.5.1.min.js", integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=", crossorigin="anonymous")
  script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js", integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV", crossorigin="anonymous")
