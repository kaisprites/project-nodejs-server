doctype html
html
  head
    title 글쓰기
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css", integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z", crossorigin="anonymous")
    link(rel="stylesheet", href="/css/css.css", crossorigin="anonymous")
  body
    h1 글쓰기
    form(action="/newtopic", method="post")
      input(type="hidden", name="name", value=name)
      table.table-bordered.col-sm-12
        tbody
          tr
            th(scope="row") Name
            td=name
          tr
            th(scope="row") Title
            td
              input.form-control(type="text", name="title", placeholder="title")
          tr
            th(scope="row") Content
            td
              textarea.form-control(name="content", placeholder="content")
      button.btn.btn-outline-primary(type="submit") submit
      button.btn.btn-outline-secondary(type="button", onclick="location.href='../'") cancel

  script(src="https://code.jquery.com/jquery-3.5.1.min.js", integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=", crossorigin="anonymous")
  script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js", integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV", crossorigin="anonymous")
